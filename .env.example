# Environment configuration example for the agent

# Discord Bot configuration
BOT_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=your_guild_id_here

# MongoDB configuration
MONGO_INITDB_ROOT_USERNAME=your_mongodb_root_username_here
MONGO_INITDB_ROOT_PASSWORD=your_mongodb_root_password_here
MONGODB_URI=mongodb://your_mongodb_root_username_here:your_mongodb_root_password_here@mongodb:27017/your_database_name_here

# Flask configuration
FLASK_ENV=development  # Options: development, production
FLASK_DEBUG=1          # Options: 0 (off), 1 (on)

# Agent configuration
ASSISTANT_ID=your_default_assistant_id_here

# Database configuration (if applicable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# API keys and secrets
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Logging configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://yourdomain.com

# External service URLs
EXTERNAL_SERVICE_URL=https://api.external-service.com

# Other configurations
# Add any other environment variables your application might need